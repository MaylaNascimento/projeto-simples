package com.dio.calculadora;

import java.util.Scanner;

public class Calculadora {
		
	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		
		int a, b;
		
		System.out.println("Digite num 1: ");
		a = scan.nextInt();
		System.out.println("Digite num 2: ");
		b = scan.nextInt();
		
		int soma = soma(a,b);
		int subtracao = subtracao(a,b);
		int multiplicao = multiplicacao(a,b);
		int divisao = divisao(a,b);
		
		System.out.println(soma);
		System.out.println(subtracao);
		System.out.println(multiplicao);
		System.out.println(divisao);
		
	}
	public static void int soma(int a, int b) {
		
		return a + b;
	}
	
	public static void int subtracao(int a, int b) {
		
		return a - b;
	}
	
	public static void int divisao(int a, int b) {
		
		return a / b;
	}
	
	public static void int multiplicacao(int a, int b) {
		
		return a * b;
	}
	
	
	

